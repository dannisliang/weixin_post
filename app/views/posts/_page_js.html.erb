<script type="text/javascript">
	$(function(){
		$(".post-list--page-next, .feed-list--page-next").click(function(){
	      window.location = window.location.pathname + "?page=" + "<%= [params[:page].to_i, 1].max + 1 %>";
	    });

	    // prev page
	    $(".post-list--page-prev, .feed-list--page-prev").click(function(){
	      window.location = window.location.pathname + "?page=" + "<%= [params[:page].to_i, 1].max - 1 %>";
	    });
	    <% if defined? category %>
	    	var category_id = "<%= category.present? ? category.id : '' %>";
	    <% else %>
	    	var category_id = ''
	    <% end %>
	    var category_param = "";
	    
	    if(category_id != null && category_id != undefined && category_id != ''){
	      category_param = "category_id=" + category_id + "&";
	    }

	    $(".feed-list--page-next").click(function(){
	    	window.location = window.location.pathname + "?" + category_param + "page=" + "<%= [params[:page].to_i, 1].max + 1 %>";
	    })

	    $(".feed-list--page-prev").click(function(){
	    	window.location = window.location.pathname + "?" + category_param + "page=" + "<%= [params[:page].to_i, 1].max + 1 %>";
	    })
	})
	
</script>